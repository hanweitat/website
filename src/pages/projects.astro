---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects</div>
  </div>

  <HorizontalCard
    title="Telegram Bot With ChatGPT"
    img="telegram.jpg"
    desc="In this small project of mine, I used OpenAI's APIs to create a Telegram chatbot that allows users to ask all kinds of questions conveniently and it provides an avenue for users to socialise with the robot."
    url="https://t.me/bffgptbot"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Stay Tuned"
    img="loading.jpeg"
    desc="Keep a lookout for this page! A new project is brewing!"
    url="#"
    badge="IN PROGRESS"
  />
</BaseLayout>
